<h1>Listing user_shops</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Shop</th>
      <th>Role</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @user_shops.each do |user_shop| %>
      <tr>
        <td><%= user_shop.user_id %></td>
        <td><%= user_shop.shop_id %></td>
        <td><%= user_shop.role %></td>
        <td><%= link_to 'Show', user_shop %></td>
        <td><%= link_to 'Edit', edit_user_shop_path(user_shop) %></td>
        <td><%= link_to 'Destroy', user_shop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

