<h1>Listing shops</h1>

<table>
  <thead>
    <tr>
      <th>Owner</th>
      <th>Name</th>
      <th>Address1</th>
      <th>Address2</th>
      <th>City</th>
      <th>Country</th>
      <th>Zipcode</th>
      <th>Tel</th>
      <th>Banner</th>
      <th>Tags</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @shops.each do |shop| %>
      <tr>
        <td><%= shop.owner_id %></td>
        <td><%= shop.name %></td>
        <td><%= shop.address1 %></td>
        <td><%= shop.address2 %></td>
        <td><%= shop.city %></td>
        <td><%= shop.country %></td>
        <td><%= shop.zipcode %></td>
        <td><%= shop.tel %></td>
        <td><%= shop.banner %></td>
        <td><%= shop.tags %></td>
        <td><%= link_to 'Show', shop %></td>
        <td><%= link_to 'Edit', edit_shop_path(shop) %></td>
        <td><%= link_to 'Destroy', shop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

