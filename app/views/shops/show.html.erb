<p id="notice"><%= notice %></p>
<p>
  <strong>Owner:</strong>
  <%= @shop.user.name %>
</p>

<p>
  <strong>Name:</strong>
  <%= @shop.try(:name) %>
</p>

<p>
  <strong>Address1:</strong>
  <%= @shop.try(:address1) %>
</p>

<p>
  <strong>Address2:</strong>
  <%= @shop.try(:address2) %>
</p>

<p>
  <strong>City:</strong>
  <%= @shop.try(:city) %>
</p>

<p>
  <strong>Country:</strong>
  <%= @shop.try(:country) %>
</p>

<p>
  <strong>Zipcode:</strong>
  <%= @shop.try(:zipcode) %>
</p>

<p>
  <strong>Tel:</strong>
  <%= @shop.try(:tel) %>
</p>

<p>
  <strong>Banner:</strong>
  <%= image_tag @shop.try(:banner).try(:large) %>
</p>

<p>
  <strong>Tags:</strong>
  <%= @shop.tags.map(&:name).join(", ") %>
</p>

<p>
  <strong>Role:</strong>
  <%= Role.find(UserShop.get_role_id(current_user.id, @shop.id)).try(:name) %>
</p>
<div class="actions">
  <%= link_to "Edit", edit_shop_path(@shop), :"data-role" => "button", style: "width:100px;" %>
  <%= link_to "Shops", shops_path, :"data-role" => "button", style: "width:100px;" %>
</div>